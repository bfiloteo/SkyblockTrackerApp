<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/DungeonProfileName"
            style="@style/ProfileNameStyle">
        </TextView>

        <TextView
            android:id="@+id/NoStatsFound"
            style="@style/NoDataFound">
        </TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:id="@+id/EntranceLayout">

            <TextView
                android:id="@+id/EntranceTitle"
                style="@style/FloorTitle"
                android:text="@string/entrance">
            </TextView>

            <TextView
                android:id="@+id/EntranceTimesAttemptedTitle"
                style="@style/TimesAttemptedTitle" />

            <TextView
                android:id="@+id/EntranceTimesAttempted"
                style="@style/TimesAttemptedNumber"
                android:layout_below="@id/EntranceTimesAttemptedTitle">
            </TextView>

            <TextView
                android:id="@+id/EntranceTimesCompletedTitle"
                style="@style/TimesCompletedTitle"
                android:layout_below="@id/EntranceTimesAttempted"/>

            <TextView
                android:id="@+id/EntranceTimesCompleted"
                android:layout_below="@id/EntranceTimesCompletedTitle"
                style="@style/TimesCompletedNumber">
            </TextView>


            <ImageView
                android:id="@+id/EntranceIcon"
                style="@style/DungeonBossIcon"
                android:src="@drawable/entranceicon"
                android:scaleX="-1"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:id="@+id/FloorOneLayout">

            <TextView
                android:id="@+id/FloorOneTitle"
                style="@style/FloorTitle"
                android:text="@string/floor_one"
                android:textSize="25sp">

            </TextView>

            <TextView
                android:id="@+id/FloorOneTimesAttemptedTitle"
                style="@style/TimesAttemptedTitle" />

            <TextView
                android:id="@+id/FloorOneTimesAttemptedNumber"
                style="@style/TimesAttemptedNumber"
                android:layout_below="@id/FloorOneTimesAttemptedTitle">
            </TextView>

            <TextView
                android:id="@+id/FloorOneTimesCompletedTitle"
                style="@style/TimesCompletedTitle"
                android:layout_below="@id/FloorOneTimesAttemptedNumber"/>

            <TextView
                android:id="@+id/FloorOneTimesCompletedNumber"
                android:layout_below="@id/FloorOneTimesCompletedTitle"
                style="@style/TimesCompletedNumber">
            </TextView>


            <ImageView
                android:id="@+id/FloorOneIcon"
                style="@style/DungeonBossIcon"
                android:src="@drawable/flooroneicon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:id="@+id/FloorTwoLayout">

            <TextView
                android:id="@+id/FloorTwoTitle"
